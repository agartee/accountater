@model UploadCsvFileViewModel

<form asp-controller="FileUpload" asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div>
        <div>
            <label>Choose CSV file type:</label>
            <div>
            @foreach (var type in Enum.GetValues(typeof(CsvFileType)))
            {
                <label>
                    <input asp-for="CsvFileType" type="radio" value="@type">@type
                </label>
            }
        </div>
        </div>
        <label for="file">Choose CSV file</label>
        <input type="file"id="file" name="file" accept=".csv" required />
    </div>
    <button type="submit">Upload</button>
</form>
