@model TagRuleSearchResults

@{
    ViewData["Title"] = "Tag Rules";
    ViewData["PaginationBaseUrl"] = "tagrule";
}

<h1>Tag Rules</h1>

<partial name="Pagination" model="Model" />

<a href="/tagrule/create">Create New...</a>

<table id="tagRulesTable" class="pure-table pure-table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Expression</th>
            <th>Tag</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tagRule in Model.TagRules)
        {
            <tr>
                <td>@tagRule.Name</td>
                <td>@tagRule.Expression</td>
                <td>@tagRule.Tag</td>
                <td>
                    <a href="/tagrule/@tagRule.Id.Value/edit">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="Pagination" model="Model" />

<script>
    $(document).ready(function () {
        $('#tagRulesTable').DataTable({
            paging: false,
            searching: false,
            info: false,
            order: [[0, "desc"]]
        });
    });
</script>
