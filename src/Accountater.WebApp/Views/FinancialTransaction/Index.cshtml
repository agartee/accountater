@model FinancialTransactionSearchResults

@{
    ViewData["Title"] = "Transactions";
}

<h1>Financial Transactions</h1>

<partial name="Pagination" model="Model" />

<table id="transactionsTable" class="pure-table pure-table-striped">
    <thead>
        <tr>
            <th>Transaction Date</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Tags</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.FinancialTransactions)
        {
            <tr>
                <td>@transaction.TransactionDate.ToString("yyyy-MM-dd")</td>
                <td>@transaction.Description</td>
                <td>$@transaction.Amount.ToString("N2")</td>
                <td>@string.Join(", ", transaction.Tags)</td>
                <td>
                    <a href="/transaction/@transaction.Id.Value">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="Pagination" model="Model" />

<script>
    $(document).ready(function () {
        $('#transactionsTable').DataTable({
            paging: false,
            searching: false,
            info: false,
            order: [[0, "desc"]]
        });
    });
</script>
