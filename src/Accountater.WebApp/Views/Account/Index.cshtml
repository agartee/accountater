@model AccountSearchResults

@{
    ViewData["Title"] = "Accounts";
    ViewData["PaginationBaseUrl"] = "account";
}

<h1>Accounts</h1>

<partial name="Pagination" model="Model" />

<a href="/account/create">Create New...</a>

<table id="accountsTable" class="pure-table pure-table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@account.Name</td>
                <td>@account.Description</td>
                <td>
                    <a href="/account/@account.Id.Value/edit">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="Pagination" model="Model" />

<script>
    $(document).ready(function () {
        $('#accountsTable').DataTable({
            paging: false,
            searching: false,
            info: false,
            order: [[0, "desc"]]
        });
    });
</script>
