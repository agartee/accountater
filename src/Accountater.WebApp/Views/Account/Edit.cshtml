@model AccountInfo

@{
    ViewData["Title"] = "Account Details";
}

<h1>Edit Account</h1>

<form method="post" class="custom-form">
    
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Type">Account Type</label>
        <select asp-for="Type" asp-items="@(ViewBag.AccountTypes as IEnumerable<SelectListItem>)"></select>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" />
    </div>

    <div class="control-panel">
        <button type="submit" class="button button-primary">Save</button>
        <a href="/account" class="button button-secondary">Back</a>
    </div>

</form>

<h3>Danger Zone</h3>

<div class="danger-zone">
    <form action="@Url.Action("Delete", "Account", new { id = Model.Id.Value })" method="post"
          onsubmit="return confirm('Are you sure you want to delete this account?');">

        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <label>Delete this Account?</label>

        <button type="submit" class="button button-danger">Delete</button>

    </form>
</div>

@section Scripts {
    <script src="~/js/dirtyChecks.js"></script>
}
